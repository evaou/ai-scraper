# Database Configuration
# PostgreSQL connection string for development (Docker network)
DATABASE_URL=postgresql+asyncpg://postgres:password@db:5432/scraper
POSTGRES_DB=scraper
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=0
DB_POOL_PRE_PING=true
DB_ECHO=false  # Set to true for SQL query logging in development

# Redis Configuration
# Redis connection string for development (Docker network)
REDIS_URL=redis://redis:6379/0
REDIS_POOL_SIZE=10
REDIS_POOL_MAX_CONNECTIONS=20

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_KEY_REQUIRED=false
CORS_ORIGINS=["*"]

# Authentication & Security
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
API_KEY_HEADER=X-API-Key

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Scraping Configuration
SCRAPE_TIMEOUT=30
WORKER_CONCURRENCY=3
MAX_CONTENT_SIZE=10485760
PLAYWRIGHT_BROWSER=chromium
SCREENSHOT_ENABLED=true
EXTRACT_LINKS_ENABLED=true

# Cache Configuration
CACHE_TTL=3600  # Cache TTL in seconds (1 hour)
JOB_STATUS_TTL=86400  # Job status TTL in seconds (24 hours)
RESULT_CACHE_TTL=86400

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Worker Configuration
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
CELERY_WORKER_CONCURRENCY=2

# Development
DEBUG=false
RELOAD=false