# Test Environment Configuration
# Copy this file to .env.test and update values as needed

# Database Configuration for Tests
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/test_scraper
POSTGRES_DB=test_scraper
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Redis Configuration for Tests
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# API Configuration for Tests
JWT_SECRET_KEY=test-jwt-secret-key-change-in-production
API_KEY_REQUIRED=false
DEBUG=true
LOG_LEVEL=DEBUG

# Worker Configuration for Tests
WORKER_CONCURRENCY=2
PLAYWRIGHT_BROWSER=chromium

# Storage Configuration for Tests
STORAGE_PATH=/tmp/test-scraper-storage

# Rate Limiting for Tests (more permissive)
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000